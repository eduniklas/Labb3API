@model InterestWeb.Models.DTO.InterestDto
@{
    ViewData["Title"] = "Interst";
}
<form asp-action="DeleteInterest">
    <br />
    <div class="container border p-1">
        <h1 class="text-danger">Update Interest</h1>
        <hr />
        <input hidden asp-for="InterestId" />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" disabled class="form-control" rows="3"></textarea>
            </div>
            <div class="col-2 offset-2">
                <a asp-action="IndexInterest" asp-controller="Interest" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-2">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
