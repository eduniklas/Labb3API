@model InterestWeb.Models.DTO.InterestCreateDto

@{
    ViewData["Title"] = "CreateInterest";
}


<form asp-action="CreateInterest">
    <br />
    <div class="container border p-1">
        <h1 class="text-primary">Create Interest</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-2 offset-2">
                <a asp-action="IndexInterest" asp-controller="Interest" class="btn-primary btn form-control">Back to List</a>
            </div>
            <div class="col-2">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
